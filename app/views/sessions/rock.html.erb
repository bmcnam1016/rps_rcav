<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" type="text/css" href="../assets/css/bootstrap.css">
</head>
<body>

<div class="container">
<div class="well well-lg">
  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">
      <div class="btn-group btn-group-justified" role="group" aria-label="huh">
        <a href="/rock" class="btn btn-block btn-primary">
          Play Rock
        </a>

        <a href="/paper" class="btn btn-block btn-info">
          Play Paper
        </a>

        <a href="/scissors" class="btn btn-block btn-primary">
          Play Scissors
        </a>
      </div>
    </div>
  </div>
  </div>

  <div class="row">
  <div class="col-md-4 col-md-offset-2 col-xs-6">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          Rock
        </h2>
      </div>
      <div class="panel-body">
        <img class="img" width="100%" src="/assets/images/rock.png">
      </div>
    </div>
  </div>

  <div class="col-md-4 col-xs-6">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          <%= @computer_move %>
        </h2>
      </div>
      <div class="panel-body">
        <img class="img" width="100%" src="/assets/images/paper.png">
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well text-center">
      <h1>
        <span class="label label-danger">
          <%= @result %>
        </span>
      </h1>
    </div>
  </div>
</div>

</div>

</body>
</html>

